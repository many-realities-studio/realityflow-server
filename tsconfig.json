{
    "compilerOptions": {
        "lib": ["es5", "es6", "es7",
        "es2015", "es2016", "es2017", "ES2018",
        "esnext"],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "noEmitOnError": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
      "./dist/**/*",
        "/*.spec.ts",
        "/node_modules",
        "**web-client"
    ]
}